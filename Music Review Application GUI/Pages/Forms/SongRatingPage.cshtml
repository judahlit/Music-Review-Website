@page "{songId?}"
@model Music_Review_Application_GUI.Pages.Forms.SongRatingPageModel
@{
}

<h2>@SongRatingPageModel.Song.Title</h2>
<br />
<br />
<div>
    @if (SongRatingPageModel.Song.Score == 0)
    {
        <p>
            <h4>Score: N/A</h4>
        </p>
    }
    else
    {
        <p>
            <h4>Score: @SongRatingPageModel.Song.Score</h4>
        </p>
    }
<form method="post">
    <label>Your username:</label>
    <input type="text" asp-for="Username" placeholder="" />
    <br />
    <label>Your rating:</label>
    <select name="rating">
        <option value="10">10</option>
        <option value="9">9</option>
        <option value="8">8</option>
        <option value="7">7</option>
        <option value="6">6</option>
        <option value="5">5</option>
        <option value="4">4</option>
        <option value="3">3</option>
        <option value="2">2</option>
        <option value="1">1</option>
    </select>
    <br />
    <button type="submit">Rate song</button>
</form>
</div>
<br />
<div>
    <p>
        <h4>Song Information</h4>
    </p>
    <p>Artists:</p>
    @foreach (var artistName in SongRatingPageModel.Song.ArtistNames)
    {
        <label>
            <a class="nav-link text-dark" asp-area="" asp-page="/Forms/ArtistPage" asp-route-songId="@artistName">@artistName</a>
        </label>
    }
</div>
<br />
<div>
    <p>Genres:</p>
    @foreach (var genre in SongRatingPageModel.Song.Genres)
    {
        <label>@genre.GenreName</label>
    }
</div>